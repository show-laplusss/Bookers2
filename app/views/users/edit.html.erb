<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <p>Name</p>
          <%= f.text_field :name %>
          <p>Image</p>
          <%= f.file_field :profile_image %>  
          <p>Introduction</p>
          <%= f.text_field :introduction %>
          <div><%= f.submit "Update User" %></div>
        <% end %>
    </div>
  </div>
</div>

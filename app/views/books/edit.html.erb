<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
       <%= form_with model: @book,method: :patch do |f| %>
       <div>
          <p>Title</p>
          <%= f.text_field :title, autofocus: true %>   
      </div>
      <div>
          <p>Opinion</p>
          <%= f.text_field :body %>
      </div>
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        <% end %>
        <%= link_to book_path(@book.id) do %>Show<% end %>
        |
        <%= link_to books_path do %>Back<% end %>
    </div>
  </div>
</div>
